<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail_antrian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.klinikparadise.Activity.DetailAntrianActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUKTI PENDAFTARAN"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="21sp"
            android:paddingTop="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Klinik Paradise"
            android:gravity="center"
            android:textSize="19sp"
            android:paddingTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POLI TUJUAN"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            android:paddingTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:paddingTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. Kartu : 1234"
            android:gravity="center"
            android:textSize="17sp"
            android:paddingTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Pasien"
            android:gravity="center"
            android:textSize="17sp"
            android:paddingTop="13dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hadir Pada : 27 - 01 - 2018"
            android:gravity="center"
            android:textSize="17sp"
            android:paddingTop="13dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jadwal : Malam"
            android:gravity="center"
            android:textSize="17sp"
            android:paddingTop="13dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/btnDaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/yellow_round"
                android:text="Batalkan   Antrian"
                android:textSize="16dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="8dp"/>

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/yellow_round"
                android:layout_alignBottom="@+id/klinik"
                android:text="History       Antrian"
                android:textSize="16dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



