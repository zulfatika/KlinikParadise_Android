<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_konfirmasi_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.klinikparadise.Activity.KonfirmasiDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor Kartu Pasien"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/nomorKartu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="16dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:background="@color/cardview_shadow_end_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Pasien"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:paddingLeft="25dp"
            android:paddingTop="13dp"/>

        <TextView
            android:id="@+id/namaPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="16dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:background="@color/cardview_shadow_end_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Pemeriksaan"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:paddingLeft="25dp"
            android:paddingTop="13dp"/>

        <TextView
            android:id="@+id/tglPeriksa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:background="@color/cardview_shadow_end_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jadwal Periksa"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:paddingLeft="25dp"
            android:paddingTop="13dp"/>

        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="9dp"
            android:paddingBottom="7dp"
            android:layout_width="match_parent"
            android:background="@color/cardview_shadow_end_color"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poli Tujuan"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:paddingLeft="25dp"
            android:paddingTop="13dp"/>

        <TextView
            android:id="@+id/poliTujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="16dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:background="@color/cardview_shadow_end_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnDaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/yellow_round"
                android:text="Daftar"
                android:textSize="17dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="8dp"/>

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/yellow_round"
                android:layout_alignBottom="@+id/klinik"
                android:text="Batal"
                android:textSize="17dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
